{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "Domain",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Which domain name would you like to create?"
    },
    "entity": {
      "type": "string",
      "description": "Add entity to the domain (singular)",
      "alias": "t"
    },
    "project": {
      "type": "string",
      "description": "The name of the common core library.",
      "$default": {
        "$source": "projectName"
      }
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    }
  },
  "required": ["name", "entity", "project"]
}
